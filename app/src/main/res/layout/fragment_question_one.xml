<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple">

    <ImageView
        android:id="@+id/question_one_top_pattern_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_question_one_top_pattern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/question_one_question_sheet_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_question_sheet"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_one_top_pattern_image"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/question_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Question"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="4"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="@+id/question_one_question_sheet_image"
        app:layout_constraintEnd_toEndOf="@+id/question_one_question_sheet_image"
        app:layout_constraintTop_toTopOf="@+id/question_one_question_sheet_image"
        tools:text= "How do you judge what should be added in the next version of the app?"/>

</androidx.constraintlayout.widget.ConstraintLayout>